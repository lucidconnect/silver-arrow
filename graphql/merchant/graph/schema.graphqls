# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  fetchOneProduct(id: String!): Product!
  fetchProducts(owner: String!): [Product!]!
}

type Mutation {
  addProduct(input: NewProduct!): Product!
  updateProduct(input: ProductUpdate!): Product!
  createAccessKey(input: String!): AccessKey!
}

input NewProduct {
  name: String!
  owner: String!
  chain: Int!
  Token: String!
  receivingAddress: String!
}

input ProductUpdate {
  name: String
  receivingAddress: String
}

type Sub {
  Chain: Int! 
  token: String!
  amount: Int!
  active: Boolean!
  interval: String!
  walletAddress: String!
}

type Product {
  name: String!
  owner: String!
  chain: Int!
  Token: String!
  ProductId: String!
  receivingAddress: String!
  subscriptions: [Sub!]
}

type AccessKey {
  publicKey: String!
  privateKey: String!
}

scalar Time